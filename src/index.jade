doctype html
html(lang="en", ng-app="twitterFace")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Twitterface
    link(rel="stylesheet", href="/lib/build.css")
    link(rel="stylesheet", href="/assets/main.css")
  body
    .container
      nav.navbar
        ul.nav.navbar-nav.navbar-right
          li: a(href='/#/newfriends') Home
          li(ng-hide="auth"): a(href='/#/login') Login
          li(ng-show="auth"): a(href='/#/logout') Logout
    .app(ng-view)

  script(src="lib/build.js")
  script(src="assets/main.module.js")
  script(src="assets/main.constants.js")

  script(src="assets/auth/auth.config.js")
  script(src="assets/auth/auth.controller.js")
  script(src="assets/auth/logout.controller.js")

  script(src="assets/profile/profile.factory.js")
  script(src="assets/profile/profile.controller.js")
  script(src="assets/profile/profile.config.js")
  script(src="assets/profile/friends.controller.js")

  script(src="assets/person/person.controller.js")



