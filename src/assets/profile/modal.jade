.modal.fade#modal(ng-controller="AuthCtrl")
  .modal-dialog
    .modal-content
      .modal-header
        button.close(data-dismiss="modal")
          span &times;
        h2 Profile
      .modal-body
        form(name="profileForm", novalidate)
          .form-group
            label.control-label Name
            input.form-control(type="text", placeholder="Bob", ng-model="main.person.name", required)
          .form-group
            label.control-label Email
            input.form-control(type="email", placeholder="bob@abc.com", ng-model="main.person.email", required)
          .form-group
            label.control-label Age
            input.form-control(name="a", type="text", placeholder="@bob", ng-model="main.person.age", required)
          .form-group
            label.control-label Hobbies
            input.form-control(type="text", placeholder="6152222222", ng-model="main.person.hobbies", required)
          .form-group
            label.control-label Photo URL
            input.form-control(type="url", placeholder="http://google.com/img.jpg", ng-model="main.person.photo", required)
          .form-group
            label.control-label Password
            input.form-control(type="password", placeholder="Enter password", ng-model="main.person.password", required)
      .modal-footer
        button.btn.btn-default(data-dismiss="modal") Cancel
        button.btn.btn-danger(ng-click="main.saveProfile()") Save
